# EditorConfig 帮助开发者在不同的编辑器和 IDE 中定义和保持一致的代码风格
# http://editorconfig.org

root = true

# 所有文件
[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# JavaScript/TypeScript/Vue 文件
[*.{js,jsx,ts,tsx,vue,mts}]
indent_size = 2

# JSON 文件
[*.{json,jsonc}]
indent_size = 2

# CSS/SCSS 文件
[*.{css,scss,less}]
indent_size = 2

# Markdown 文件
[*.md]
trim_trailing_whitespace = false
insert_final_newline = false

# YAML 文件
[*.{yml,yaml}]
indent_size = 2

# Shell 脚本
[*.{sh,bash}]
indent_size = 2
